generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Task {
  task        String
  done        Boolean?
  priority    Int?
  description String?
  assignee    String?
  id          String    @id @default(cuid())
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  @@map("tasks")
}

model Categorie {
  name        String
  description String?
  id          String    @id @default(cuid())
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  @@map("categories")
}
