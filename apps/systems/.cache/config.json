{
  "name": "systems",
  "version": "0.0.1",
  "database": {
    "url": "file:./dev.db",
    "provider": "sqlite"
  },
  "tables": {
    "tasks": {
      "fields": {
        "task": {
          "type": "String"
        },
        "done": {
          "type": "Boolean",
          "optional": true
        },
        "priority": {
          "type": "Int",
          "optional": true
        },
        "description": {
          "type": "String",
          "optional": true
        },
        "assignee": {
          "type": "String",
          "optional": true
        },
        "id": {
          "type": "String",
          "primary": true,
          "default": "cuid()"
        },
        "created_at": {
          "type": "DateTime",
          "default": "now()"
        },
        "updated_at": {
          "type": "DateTime",
          "optional": true
        },
        "deleted_at": {
          "type": "DateTime",
          "optional": true
        }
      }
    },
    "categories": {
      "fields": {
        "name": {
          "type": "String",
          "optional": false
        },
        "description": {
          "type": "String",
          "optional": true
        },
        "id": {
          "type": "String",
          "primary": true,
          "default": "cuid()"
        },
        "created_at": {
          "type": "DateTime",
          "default": "now()"
        },
        "updated_at": {
          "type": "DateTime",
          "optional": true
        },
        "deleted_at": {
          "type": "DateTime",
          "optional": true
        }
      }
    }
  },
  "pages": {
    "/": {
      "title": "Systems",
      "metadata": {
        "description": "Build and deploy anything anywhere"
      },
      "components": [
        {
          "key": "hero",
          "navigation": [
            {
              "name": "Product",
              "href": "#"
            },
            {
              "name": "Features",
              "href": "#"
            },
            {
              "name": "Customers",
              "href": "#"
            },
            {
              "name": "Company",
              "href": "#"
            }
          ]
        },
        {
          "key": "logos"
        },
        {
          "key": "features"
        },
        {
          "key": "testimonials"
        },
        {
          "key": "cta"
        },
        {
          "key": "footer"
        }
      ]
    },
    "/app": {
      "title": "App",
      "components": [
        {
          "key": "list",
          "table": "tasks",
          "fields": [
            "task",
            "done",
            "priority",
            "description"
          ]
        },
        {
          "key": "form",
          "table": "tasks",
          "fields": [
            "task",
            "priority",
            "description"
          ]
        }
      ]
    }
  },
  "integrations": {
    "math": {
      "environment": "shared",
      "type": "javascript",
      "source": "module.exports = {\n  add: function (a, b) {\n    return a + b;\n  }\n};"
    }
  },
  "actions": {
    "add": {
      "input": {
        "numbers": {
          "type": "array",
          "optional": false,
          "items": {
            "type": "Int",
            "optional": false
          }
        }
      },
      "output": {
        "result": {
          "type": "Int",
          "optional": false
        }
      },
      "implementation": {
        "type": "javascript",
        "resources": [
          "math"
        ],
        "source": "return math.add(input.numbers[0], input.numbers[1]);"
      },
      "tests": {
        "shouldReturnSix": {
          "input": {
            "numbers": [
              1,
              2
            ]
          },
          "output": {
            "result": 3
          }
        }
      }
    }
  },
  "automations": {
    "add": {
      "trigger": "http",
      "actions": {
        "math": {
          "numbers": "$input.numbers"
        }
      },
      "tests": {
        "shouldReturnSix": {
          "input": {
            "numbers": [
              1,
              2,
              3
            ]
          },
          "output": {
            "result": 6
          }
        }
      }
    }
  }
}
