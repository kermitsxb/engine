  "integrations": {
    "math": {
      "environment": "shared",
      "type": "javascript",
      "source": "module.exports = {\n  add: function (a, b) {\n    return a + b;\n  }\n};"
    }
  },
  "actions": {
    "add": {
      "input": {
        "numbers": {
          "type": "array",
          "optional": false,
          "items": {
            "type": "Int",
            "optional": false
          }
        }
      },
      "output": {
        "result": {
          "type": "Int",
          "optional": false
        }
      },
      "implementation": {
        "type": "javascript",
        "resources": [
          "math"
        ],
        "source": "return math.add(input.numbers[0], input.numbers[1]);"
      },
      "tests": {
        "shouldReturnSix": {
          "input": {
            "numbers": [
              1,
              2
            ]
          },
          "output": {
            "result": 3
          }
        }
      }
    }
  },
  "automations": {
    "add": {
      "trigger": "http",
      "actions": {
        "math": {
