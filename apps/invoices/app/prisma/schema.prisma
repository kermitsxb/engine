generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Invoice {
  customer       String
  address        String
  zip_code       String
  country        String
  activity       String
  unit           String
  quantity       Int
  unit_price     Decimal
  status         String    @default("draft")
  number         String?
  finalised_date DateTime?
  id             String    @id @default(cuid())
  created_at     DateTime  @default(now())
  updated_at     DateTime?
  deleted_at     DateTime?

  @@map("invoices")
}
