{
  "name": "invoices",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "config": "pnpm turbo:build && foundation config",
    "dev": "pnpm run config && next dev",
    "start": "pnpm run config && next build && next start",
    "lint": "next lint",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "turbo:build": "cd ../.. && pnpm build && cd -"
  },
  "dependencies": {
    "autoprefixer": "10.4.14",
    "foundation": "workspace:*",
    "next": "13.4.7",
    "postcss": "8.4.24",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.2"
  },
  "devDependencies": {
    "@playwright/test": "1.33.0",
    "dotenv": "^16.1.4",
    "prisma": "^4.15.0",
    "shared-database": "workspace:*"
  }
}
