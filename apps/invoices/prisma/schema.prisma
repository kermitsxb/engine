generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./test.db"
}

model Invoice {
  customer       String
  address        String
  zip_code       String
  country        String
  items          InvoiceItem[]
  status         String        @default("draft")
  number         String?
  finalised_date DateTime?

  id         String    @id @default(cuid())
  created_at DateTime  @default(now())
  updated_at DateTime?
  deleted_at DateTime?

  @@map("invoices")
}

model InvoiceItem {
  invoice    Invoice @relation(fields: [invoiceId], references: [id])
  activity   String
  quantity   Int
  unity      String
  unit_price Decimal

  id         String    @id @default(cuid())
  created_at DateTime  @default(now())
  updated_at DateTime?
  deleted_at DateTime?
  invoiceId  String

  @@map("invoices_items")
}
