{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "Action": {
            "anyOf": [
                {
                    "$ref": "#/definitions/CreateRecord"
                },
                {
                    "$ref": "#/definitions/SendEmail"
                }
            ]
        },
        "CreateRecord": {
            "additionalProperties": false,
            "properties": {
                "action": {
                    "const": "CreateRecord",
                    "type": "string"
                },
                "fields": {
                    "$ref": "#/definitions/Record<string,string>"
                },
                "name": {
                    "type": "string"
                },
                "table": {
                    "type": "string"
                }
            },
            "required": [
                "action",
                "fields",
                "name",
                "table"
            ],
            "type": "object"
        },
        "Partial<Database>": {
            "additionalProperties": false,
            "properties": {
                "database": {
                    "enum": [
                        "postgres",
                        "sqlite"
                    ],
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Partial<Mailer>": {
            "additionalProperties": false,
            "properties": {
                "host": {
                    "type": "string"
                },
                "pass": {
                    "type": "string"
                },
                "port": {
                    "type": "number"
                },
                "secure": {
                    "type": "boolean"
                },
                "user": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Record<string,string>": {
            "additionalProperties": false,
            "type": "object"
        },
        "RecordCreated": {
            "additionalProperties": false,
            "properties": {
                "event": {
                    "const": "RecordCreated",
                    "type": "string"
                },
                "table": {
                    "type": "string"
                }
            },
            "required": [
                "event",
                "table"
            ],
            "type": "object"
        },
        "SendEmail": {
            "additionalProperties": false,
            "properties": {
                "action": {
                    "const": "SendEmail",
                    "type": "string"
                },
                "from": {
                    "type": "string"
                },
                "html": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "subject": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "to": {
                    "type": "string"
                }
            },
            "required": [
                "action",
                "from",
                "html",
                "name",
                "subject",
                "text",
                "to"
            ],
            "type": "object"
        },
        "Trigger": {
            "anyOf": [
                {
                    "$ref": "#/definitions/RecordCreated"
                },
                {
                    "$ref": "#/definitions/WebhookCalled"
                }
            ]
        },
        "WebhookCalled": {
            "additionalProperties": false,
            "properties": {
                "event": {
                    "const": "WebhookCalled",
                    "type": "string"
                },
                "method": {
                    "const": "POST",
                    "type": "string"
                },
                "path": {
                    "type": "string"
                }
            },
            "required": [
                "event",
                "method",
                "path"
            ],
            "type": "object"
        }
    },
    "properties": {
        "actions": {
            "items": {
                "$ref": "#/definitions/Action"
            },
            "type": "array"
        },
        "database": {
            "$ref": "#/definitions/Partial<Database>"
        },
        "mailer": {
            "$ref": "#/definitions/Partial<Mailer>"
        },
        "name": {
            "type": "string"
        },
        "trigger": {
            "$ref": "#/definitions/Trigger"
        }
    },
    "required": [
        "actions",
        "name",
        "trigger"
    ],
    "type": "object"
}

