                "from",
                "html",
                "name",
                "subject",
                "text",
                "to"
            ],
            "type": "object"
        },
        "Trigger": {
            "anyOf": [
                {
                    "$ref": "#/definitions/RecordCreated"
                },
                {
                    "$ref": "#/definitions/WebhookCalled"
                }
            ]
        },
        "WebhookCalled": {
            "properties": {
                "event": {
                    "const": "WebhookCalled",
                    "type": "string"
