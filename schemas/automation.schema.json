            "type": "object"
        }
    },
    "properties": {
        "actions": {
            "items": {
                "$ref": "#/definitions/Action"
            },
            "type": "array"
        },
        "database": {
            "$ref": "#/definitions/Database"
        },
        "mailer": {
            "$ref": "#/definitions/Mailer"
        },
        "name": {
            "type": "string"
        },
        "trigger": {
