                    "type": "string"
                },
                "host": {
                    "type": "string"
                },
                "pass": {
                    "type": "string"
                },
                "port": {
                    "type": "string"
                },
                "secure": {
                    "type": "boolean"
                },
                "user": {
                    "type": "string"
                }
            },
            "required": [
                "from",
                "host",
                "pass",
                "port",
                "user"
            ],
            "type": "object"
        },
        "RecordCreated": {
            "properties": {
                "event": {
                    "const": "RecordCreated",
                    "type": "string"
                },
                "table": {
                    "type": "string"
