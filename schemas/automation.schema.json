                        "type": [
                            "string",
                            "number",
                            "boolean"
                        ]
                    },
                    "type": "object"
                },
                "name": {
                    "type": "string"
                },
                "table": {
                    "type": "string"
                }
            },
            "required": [
                "action",
                "fields",
                "name",
                "table"
            ],
            "type": "object"
        },
        "Database": {
            "properties": {
                "db": {
                    "enum": [
