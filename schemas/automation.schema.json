                "event",
                "table"
            ],
            "type": "object"
        },
        "SendEmail": {
            "properties": {
                "action": {
                    "const": "SendEmail",
                    "type": "string"
                },
                "from": {
                    "type": "string"
                },
                "html": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "subject": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
