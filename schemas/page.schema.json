{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "Head": {
            "additionalProperties": false,
            "properties": {
                "links": {
                    "items": {
                        "$ref": "#/definitions/Link"
                    },
                    "type": "array"
                },
                "metas": {
                    "items": {
                        "$ref": "#/definitions/Meta"
                    },
                    "type": "array"
                },
                "scripts": {
                    "items": {
                        "$ref": "#/definitions/Script"
                    },
                    "type": "array"
                },
                "title": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Link": {
            "additionalProperties": false,
            "properties": {
                "href": {
                    "type": "string"
                }
            },
            "required": [
                "href"
            ],
            "type": "object"
        },
        "Meta": {
            "additionalProperties": false,
            "properties": {
                "content": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "content",
                "name"
            ],
            "type": "object"
        },
        "Script": {
            "additionalProperties": false,
            "properties": {
                "src": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "module",
                        "text/javascript"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "src"
            ],
            "type": "object"
        }
    },
    "properties": {
        "body": {
            "items": {},
            "type": "array"
        },
        "head": {
            "$ref": "#/definitions/Head"
        },
        "name": {
            "type": "string"
        },
        "path": {
            "type": "string"
        }
    },
    "required": [
        "body",
        "name",
        "path"
    ],
    "type": "object"
}

