{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "IFeature": {
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "pages": {
                    "items": {
                        "$ref": "#/definitions/IPage"
                    },
                    "type": "array"
                },
                "role": {
                    "type": "string"
                },
                "specs": {
                    "items": {
                        "$ref": "#/definitions/ISpec"
                    },
                    "type": "array"
                }
            },
            "required": [
                "name"
            ],
            "type": "object"
        },
        "IPage": {
            "additionalProperties": false,
            "properties": {
                "body": {
                    "items": {
                        "$ref": "#/definitions/IPageComponent"
                    },
                    "type": "array"
                },
                "name": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "seo": {
                    "$ref": "#/definitions/IPageSeo"
                }
            },
            "required": [
                "body",
                "name",
                "path"
            ],
            "type": "object"
        },
        "IPageComponent": {
            "anyOf": [
                {
                    "additionalProperties": false,
                    "properties": {
                        "component": {
                            "const": "Hero",
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "primaryButton": {
                            "additionalProperties": false,
                            "properties": {
                                "path": {
                                    "type": "string"
                                },
                                "text": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "path",
                                "text"
                            ],
                            "type": "object"
                        },
                        "title": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "component",
                        "description",
                        "primaryButton",
                        "title"
                    ],
                    "type": "object"
                },
                {
                    "additionalProperties": false,
                    "properties": {
                        "component": {
                            "const": "Paragraph",
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "text": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "component",
                        "text"
                    ],
                    "type": "object"
                }
            ]
        },
        "IPageSeo": {
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "description",
                "title"
            ],
            "type": "object"
        },
        "IRole": {
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "type": "object"
        },
        "ISpec": {
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "then": {
                    "items": {
                        "$ref": "#/definitions/ISpecResult"
                    },
                    "type": "array"
                },
                "when": {
                    "items": {
                        "$ref": "#/definitions/ISpecOpenAction"
                    },
                    "type": "array"
                }
            },
            "required": [
                "name",
                "then",
                "when"
            ],
            "type": "object"
        },
        "ISpecOpenAction": {
            "additionalProperties": false,
            "properties": {
                "open": {
                    "type": "string"
                }
            },
            "required": [
                "open"
            ],
            "type": "object"
        },
        "ISpecResult": {
            "anyOf": [
                {
                    "$ref": "#/definitions/ISpecTitleResult"
                },
                {
                    "$ref": "#/definitions/ISpecTextResult"
                }
            ]
        },
        "ISpecTextResult": {
            "additionalProperties": false,
            "properties": {
                "text": {
                    "type": "string"
                }
            },
            "required": [
                "text"
            ],
            "type": "object"
        },
        "ISpecTitleResult": {
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "title"
            ],
            "type": "object"
        },
        "ITranslation": {
            "additionalProperties": false,
            "properties": {
                "language": {
                    "const": "EN",
                    "type": "string"
                },
                "texts": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            },
            "required": [
                "language",
                "texts"
            ],
            "type": "object"
        }
    },
    "properties": {
        "features": {
            "items": {
                "$ref": "#/definitions/IFeature"
            },
            "type": "array"
        },
        "name": {
            "type": "string"
        },
        "roles": {
            "items": {
                "$ref": "#/definitions/IRole"
            },
            "type": "array"
        },
        "translations": {
            "items": {
                "$ref": "#/definitions/ITranslation"
            },
            "type": "array"
        }
    },
    "required": [
        "features",
        "name"
    ],
    "type": "object"
}

