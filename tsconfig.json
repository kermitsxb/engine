{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@solumy/engine": ["dist/app"],
      "@solumy/engine/*": ["dist/*"],
      "@infra/*": ["src/infrastructure/*"],
      "@adapter/*": ["src/adapter/*"],
      "@domain/*": ["src/domain/*"],
      "@tests/components": ["tests/dist/components"],
    },
  },
  "exclude": ["node_modules", "dist", ".old", "src_OLD"],
}
