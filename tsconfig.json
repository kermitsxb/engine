{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@infrastructure/*": ["src/infrastructure/*"],
      "@adapter/*": ["src/adapter/*"],
      "@domain/*": ["src/domain/*"],
      "@solumy/engine": ["dist/infrastructure/engine/index"],
      "@solumy/engine/*": ["dist/infrastructure/engine/*"],
      "@utils/tests/components": ["dist/utils/tests/components"],
      "@utils/tests/*": ["utils/tests/*"],
    },
  },
  "exclude": ["node_modules", "dist"],
}
