{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@adapter/*": ["./src/adapter/*"],
      "@domain/*": ["./src/domain/*"],
      "@safidea/engine": ["./dist/index"],
      "@tests/components": ["./tests/utils/dist/components"],
      "@tests/*": ["./tests/utils/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
