{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@infrastructure/*": ["src/infrastructure/*"],
      "@adapter/*": ["src/adapter/*"],
      "@domain/*": ["src/domain/*"],
      "@latechforce/engine": ["dist/index"],
      "@latechforce/engine/instrument": ["dist/infrastructure/instrument/index"],
      "@tests/components": ["tests/__helpers__/dist/components"],
      "@tests/*": ["tests/__helpers__/*"]
    }
  },
  "include": ["src", "tests", ".storybook", "scripts", "playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}
