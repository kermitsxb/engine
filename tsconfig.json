{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@solumy/engine": ["dist/app"],
      "@solumy/engine/*": ["dist/*"],
      "@domain/*": ["src/domain/*"],
      "@drivers/*": ["src/drivers/*"],
      "@tests/components": ["tests/dist/components"],
    },
  },
  "exclude": ["node_modules", "dist", "examples", ".old"],
}
