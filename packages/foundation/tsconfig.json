{
  "extends": "config-typescript/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@adapter/*": ["adapter/*"]
    },
    "typeRoots": ["./node_modules/@types", "src/infrastructure/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "specs/**/*.ts", "playwright.config.ts"],
  "exclude": ["src/infrastructure/client/**/*"]
}
