{
  "extends": "config-typescript/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@adapter/*": ["adapter/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "specs/**/*.ts",
    "tests/**/*.ts",
    "playwright.config.ts"
  ]
}
