{
  "extends": "config-typescript/base.json",
  "include": ["src/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "declarationMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@database/client": ["../foundation-database/src/client"],
      "@database/server": ["../foundation-database/src/server"],
      "@database/*": ["../foundation-database/src/*"],
      "@database": ["../foundation-database/src/shared"],
      "@table/client": ["../foundation-table/src/client"],
      "@table/server": ["../foundation-table/src/server"],
      "@table/*": ["../foundation-table/src/*"],
      "@table": ["../foundation-table/src/shared"],
      "@component/client": ["../foundation-component/src/client"],
      "@component/server": ["../foundation-component/src/server"],
      "@component/*": ["../foundation-component/src/*"],
      "@component": ["../foundation-component/src/shared"],
      "@page/client": ["../foundation-page/src/client"],
      "@page/server": ["../foundation-page/src/server"],
      "@page/*": ["../foundation-page/src/*"],
      "@page": ["../foundation-page/src/shared"],
      "@common/server": ["../foundation-common/src/server"],
      "@common/client": ["../foundation-common/src/client"],
      "@common/*": ["../foundation-common/src/*"],
      "@common": ["../foundation-common/src/shared"],
      "@test": ["../utils-test/src/shared"],
      "@test/server": ["../utils-test/src/server"],
      "@test/client": ["../utils-test/src/client"]
    }
  }
}
