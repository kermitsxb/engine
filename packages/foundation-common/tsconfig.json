{
  "extends": "config-typescript/base.json",
  "include": ["src/**/*", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@common/server": ["src/server"],
      "@common/client": ["src/client"],
      "@common/*": ["src/*"],
      "@common": ["src/shared"],
      "@test/server": ["../config-test/src/server"],
      "@test/client": ["../config-test/src/client"],
      "@test": ["../config-test/src/shared"]
    }
  }
}
