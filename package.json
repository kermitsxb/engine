{
  "name": "@safidea_/engine",
  "description": "Generate web app with a configuration file",
  "version": "0.8.1",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "Thomas JEANNEAU",
  "license": "BSL 1.1",
  "exports": {
    ".": "./dist/index.js",
    "./page": "./dist/page.js",
    "./automation": "./dist/automation.js",
    "./table": "./dist/table.js",
    "./feature": "./dist/feature.js",
    "./spec": "./dist/spec.js",
    "./schemas/*": "./schemas/*"
  },
  "files": [
    "dist/**/*",
    "schemas/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/safidea/engine.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bugs": {
    "url": "https://github.com/safidea/engine/issues"
  },
  "homepage": "https://github.com/safidea/engine#readme",
  "scripts": {
    "format": "bunx prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "dev": "nodemon",
    "prebuild": "bunx puppeteer browsers install chrome",
    "build:server": "bun run scripts/server/build.ts",
    "build:client": "bun run scripts/client/build.ts",
    "build:styles": "bun run scripts/styles/build.ts",
    "build:types": "bun run scripts/types/build.ts",
    "build:schemas": "bun run scripts/schemas/build.ts",
    "build:utils": "bun run scripts/utils/build.ts",
    "build": "concurrently \"npm run build:client\" \"npm run build:server\" \"npm run build:types\" \"npm run build:styles\" \"npm run build:utils\"",
    "watch:server": "nodemon --config scripts/server/watch.json",
    "watch:client": "nodemon --config scripts/client/watch.json",
    "watch:styles": "nodemon --config scripts/styles/watch.json",
    "watch:types": "nodemon --config scripts/types/watch.json",
    "watch:schemas": "nodemon --config scripts/schemas/watch.json",
    "watch:utils": "nodemon --config scripts/utils/watch.json",
    "watch": "concurrently \"npm run watch:schemas\" \"npm run watch:client\" \"npm run watch:server\" \"npm run watch:types\" \"npm run watch:styles\" \"npm run watch:utils\"",
    "pretest": "bunx playwright install --with-deps",
    "test": "bunx playwright test",
    "test:ui": "bunx playwright test --ui",
    "app:request": "DEBUG=engine:* node --env-file apps/request/.env apps/request/index.js",
    "app:request:test": "DEBUG=engine:* node --env-file apps/request/.env apps/request/tests.js",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.3",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.4",
    "ajv": "^8.15.0",
    "better-sqlite3": "^9.6.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.3",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.13",
    "pg": "^8.11.5",
    "pg-boss": "^9.0.3",
    "puppeteer": "^22.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.1.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.5.0",
    "@playwright/test": "^1.44.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.5",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@storybook/addon-essentials": "^8.1.5",
    "@storybook/addon-interactions": "^8.1.5",
    "@storybook/addon-links": "^8.1.5",
    "@storybook/addon-onboarding": "^8.1.5",
    "@storybook/blocks": "^8.1.5",
    "@storybook/react": "^8.1.5",
    "@storybook/react-vite": "^8.1.5",
    "@storybook/test": "^8.1.5",
    "@testcontainers/postgresql": "^10.9.0",
    "@types/better-sqlite3": "^7.6.10",
    "@types/bun": "latest",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^20.14.1",
    "@types/nodemon": "^1.19.6",
    "@types/pg": "^8.11.6",
    "@types/react-dom": "^18.3.0",
    "@types/smtp-server": "^3.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "debug": "^4.3.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-storybook": "^0.6.15",
    "husky": "^8.0.3",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.0",
    "semantic-release": "^23.1.1",
    "tailwindcss": "^3.4.3",
    "typescript-json-schema": "^0.62.0"
  },
  "peerDependencies": {
    "typescript": "^5.1.6"
  },
  "engines": {
    "bun": "1.1.12",
    "node": "20.11.1",
    "npm": "10.2.4"
  },
  "directories": {
    "doc": "docs",
    "example": "apps",
    "test": "tests"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
