{
  "name": "foundation",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "scripts/startup.sh -m start",
    "dev": "scripts/startup.sh -m dev",
    "lint": "turbo run lint",
    "test": "pnpm test:build && pnpm test:run",
    "test:build": "docker build -f e2e/Dockerfile -t foundation-image:latest .",
    "test:run": "npx playwright test",
    "test:run:ui": "npx playwright test --ui",
    "test:report": "npx playwright show-report",
    "schema": "turbo run schema",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "precommit": "pnpm schema && pnpm format && pnpm lint && pnpm test && git add .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "1.33.0",
    "eslint": "8.37.0",
    "eslint-config-foundation": "workspace:*",
    "fs-extra": "11.1.1",
    "husky": "8.0.3",
    "jest": "^29.5.0",
    "prettier": "latest",
    "turbo": "^1.9.9"
  },
  "engines": {
    "node": ">=18.16.0",
    "pnpm": ">=7.30.0"
  },
  "packageManager": "pnpm@7.30.0"
}
