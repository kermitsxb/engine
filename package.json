    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "debug": "^4.3.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "fs-extra": "^11.2.0",
    "husky": "^8.0.3",
    "prettier": "^3.2.4",
    "typescript-json-schema": "^0.62.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0"
  }
