{
  "name": "foundation",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "scripts/startup.sh -m start",
    "config": "scripts/startup.sh -m config",
    "dev": "scripts/startup.sh -m dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "schema": "turbo run schema",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "precommit": "pnpm schema && pnpm format && pnpm lint && pnpm test && git add .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "8.37.0",
    "eslint-config-foundation": "workspace:*",
    "husky": "8.0.3",
    "jest": "^29.5.0",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.16.0",
    "pnpm": ">=7.30.0"
  },
  "packageManager": "pnpm@7.30.0"
}
