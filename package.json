{
  "name": "foundation",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "lint": "turbo run lint",
    "test": "turbo run test",
    "schema": "turbo run schema",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "precommit": "pnpm format && pnpm lint && pnpm test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "8.37.0",
    "eslint-config-foundation": "workspace:*",
    "husky": "8.0.3",
    "prettier": "latest",
    "turbo": "^1.10.12"
  },
  "engines": {
    "node": ">=18.16.0",
    "pnpm": ">=7.30.0"
  },
  "packageManager": "pnpm@7.30.0"
}
