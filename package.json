{
  "name": "engine",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "format": "bunx prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "dev": "nodemon",
    "build:schemas": "bun run scripts/build/schemas/index.ts",
    "build:package": "bun run scripts/build/package/index.ts",
    "build:types": "bun run scripts/build/types/index.ts",
    "build": "concurrently \"npm run build:schemas\" \"npm run build:package\" \"npm run build:types\"",
    "watch:schemas": "nodemon --config scripts/build/schemas/nodemon.json",
    "watch:package": "nodemon --config scripts/build/package/nodemon.json",
    "watch:types": "nodemon --config scripts/build/types/nodemon.json",
    "watch": "concurrently \"npm run watch:schemas\" \"npm run watch:package\" \"npm run watch:types\"",
    "pretest": "bunx playwright install",
    "test": "bunx playwright test",
    "prepare": "husky install"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/bun": "latest",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.5",
    "@types/nodemon": "^1.19.6",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "debug": "^4.3.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "typescript-json-schema": "^0.62.0",
    "concurrently": "^8.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
