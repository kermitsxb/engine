{
  "name": "foundation",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "scripts/start.sh",
    "config": "scripts/config.sh",
    "build": "turbo run build",
    "dev": "scripts/dev.sh",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "precommit": "pnpm run format && pnpm run lint && pnpm run test"
  },
  "devDependencies": {
    "eslint": "8.37.0",
    "eslint-config-foundation": "workspace:*",
    "husky": "8.0.3",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.16.0",
    "pnpm": ">=7.30.0"
  },
  "packageManager": "pnpm@7.30.0"
}