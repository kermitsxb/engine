{
  "name": "foundation",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": ". scripts/setup.sh",
    "start": ". scripts/start.sh -m prod",
    "dev": ". scripts/start.sh -m dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "schema": "turbo run schema",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "precommit": "#pnpm schema && pnpm format && pnpm lint && pnpm test && git add ."
  },
  "devDependencies": {
    "eslint": "8.37.0",
    "eslint-config-foundation": "workspace:*",
    "husky": "8.0.3",
    "prettier": "latest",
    "turbo": "^1.10.3"
  },
  "engines": {
    "node": ">=18.16.0",
    "pnpm": ">=7.30.0"
  },
  "packageManager": "pnpm@7.30.0"
}
