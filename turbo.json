{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env.local"
  ],
  "globalEnv": [
    "HOST",
    "BOLD_CONFIG_FILE",
    "BOLD_APP_FOLDER",
    "NODE_ENV"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build",
        "^db:generate"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "^db:generate"
      ],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "test": {}
  }
}