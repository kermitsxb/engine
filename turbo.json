{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "APP_NAME",
    "ROOT_PATH",
    "CONFIG_FILE_PATH",
    "DATA_FOLDER_PATH",
    "NODE_ENV",
    "DEBUG",
    "EMAIL_SERVER_HOST",
    "EMAIL_SERVER_PORT",
    "EMAIL_SERVER_USER",
    "EMAIL_SERVER_PASSWORD",
    "EMAIL_FROM",
    "NEXT_BUILD",
    "NEXT_RUNTIME",
    "PORT",
    "CI"
  ],
  "pipeline": {
    "lint": {},
    "test": {},
    "schema": {},
    "config": {
      "dependsOn": [
        "schema"
      ],
      "cache": false
    },
    "dev": {},
    "build": {
      "outputs": [
        "dist/**",
        ".next/**"
      ],
      "cache": false
    },
    "start": {
      "dependsOn": [
        "build"
      ]
    }
  }
}