{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env.local"
  ],
  "globalEnv": [
    "ROOT_PATH",
    "CONFIG_FILE_PATH",
    "DATA_FOLDER_PATH",
    "NODE_ENV",
    "DEBUG",
    "EMAIL_SERVER_HOST",
    "EMAIL_SERVER_PORT",
    "EMAIL_SERVER_USER",
    "EMAIL_SERVER_PASSWORD",
    "EMAIL_FROM",
    "NEXT_BUILD"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build",
        "config"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {},
    "test": {},
    "dev": {
      "dependsOn": [
        "config"
      ],
      "cache": false,
      "persistent": true
    }
  }
}