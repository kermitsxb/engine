{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env.local"
  ],
  "globalEnv": [
    "CONFIG_FILE",
    "DATA_FOLDER",
    "NODE_ENV",
    "DEBUG",
    "EMAIL_SERVER",
    "EMAIL_FROM"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build",
        "^db:generate"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "^db:generate"
      ],
      "cache": false,
      "persistent": true
    },
    "test": {}
  }
}